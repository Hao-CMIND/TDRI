mixin canonical(langs)
  //-主要url
  link(rel='canonical' href=staticURL + '/en/' + filename)
  //-多語言url除了 x-default 指向首頁，頁面路徑都要改語言的頁面
  link(rel='alternate' hreflang='x-default' href=staticURL + '/en/index.html')
  each lang, locale in langs
    link(rel='alternate' hreflang=lang href=staticURL + '/' + locale + '/' + filename)

title #{title + ' | ' + projectName}
meta(name='description' content=desc)
meta(charset='UTF-8')
meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
meta(property='og:title' content=title + ' | ' + projectName)
meta(property='og:description' content=desc)
//- A short description of min. 2 max. 4 sentences
