                a.stretched-link(href='/PDE/Project/91' title='智慧型手機設計趨勢(2)')
          .sp
            .card.card-gray
              .card-header
                button.btn.p-0.fl-right.js-popovers-option(type='button' data-bs-toggle='popover' data-id='91' data-type='PDE' data-name='專案P_01' data-bs-content='<menu class=\'list-unstyled\'><li><button class=\'btn\' type=\'button\' data-action=\'edit\'><span class=\'fi-pen\'></span>重新命名</button></li><li><button class=\'btn\' type=\'button\' data-action=\'download\'><span class=\'fi-download\'></span>下載報告</button></li><li><button class=\'btn\' type=\'button\' data-action=\'clone\'><span class=\'fi-copy\'></span>複製</button></li><li><button class=\'btn t-red\' type=\'button\' data-action=\'delete\'><span class=\'fi-delete\'></span>刪除</button></li></menu>' data-bs-html='true' data-bs-placement='bottom')
